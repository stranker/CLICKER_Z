script/source = "extends Panel

var achieve_panel = preload(\"res://GUI/AchievePanel.tscn\")
var achieve = preload(\"res://Object/Achieve.tscn\")
var achieve_list = []

func _ready():
	init_achieves()
	create_panels()
	pass

func init_achieves():
	var a = achieve.instance()
	a.create_achieve(\"test\",100,\"res://icon.png\")
	achieve_list.push_back(a)
	pass

func create_panels():
	if !achieve_list.empty():
		for i in achieve_list:
			var ap = achieve_panel.instance()
			$Container/GridContainer.add_child(ap)
			ap.set_info(i)
	pass"
