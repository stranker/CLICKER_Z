script/source = "extends Panel

var survivor

func _ready():
	pass

func set_info(surv):
	survivor = surv
	$Name.text = surv.get_survivor_name()
	$Level.text = \"Level \"+str(surv.get_level())
	if survivor.get_weapon()==null:
		$Weapon.text = \"Weapon :\"
	else:
		$Weapon.text = \"Weapon :\"+surv.get_weapon().get_weapon_name()
		
	pass

func _on_EquipButton_pressed():
	survivor.change_weapon(get_parent().get_parent().get_weapon_to_change())
	get_parent().get_parent().reset_info()
	pass # replace with function body
