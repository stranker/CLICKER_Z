resource_name = "WatchPanel.gd"
script/source = "extends Panel

# Seek time
var survivor_time = 4
var weapon_time = 4
var supplies_time = 4

# Seek TYPE
const TYPE_SURVIVOR = 0
const TYPE_WEAPON = 1
const TYPE_SUPPLY = 2

# Seek PROB
const SURVIVOR_PROB = 0
const WEAPON_PROB = 0
const SUPPLY_PROB = 0

# SUPPLY SEARCH COST
var survivor_food_cost = 100
var survivor_water_cost = 150
var weapon_food_cost = 100
var weapon_water_cost = 200
var weapon_gold_cost = 150
var supplies_gold_cost = 300

# KIND OF SEEK
var survivor = preload(\"res://Object/Characters/Survivor.tscn\")
var weapon = preload(\"res://Object/Weapon.tscn\")
var seek_res = preload(\"res://GUI/SeekResult.tscn\")
var supplies = preload(\"res://Object/Supply.tscn\")
var curr_seek


func _ready():
	pass

func _on_CloseButton_pressed():
	hide()
	pass

func _process(delta):
	if !$SeekTimer.is_stopped():
		var time = 0
		match curr_seek:
			TYPE_SURVIVOR:
				time = survivor_time
			TYPE_WEAPON:
				time = weapon_time
			TYPE_SUPPLY:
				time = supplies_time
		get_node(\"/root/MainScene/Buildings\").set_seek_value(time - $SeekTimer.time_left)
	pass

func _on_SeekSurvivor_pressed():
	if Global.MAX_SURVIVOR > Global.SURVIVOR_LIST.size():
		if can_search_survivor():
			seek_configure(TYPE_SURVIVOR,survivor_time)
			Global.remove_resources(survivor_food_cost,survivor_water_cost,0)
		else:
			set_error(\"Not enough supplies\")
	else:
		set_error(\"Upgrade the houses to seek more survivors!\")
	pass

func set_error(text):
	$Error.text = text
	$ErrorTimer.start()
	pass

func _on_SeekWeapon_pressed():
	if can_search_weapon():
		Global.remove_resources(weapon_food_cost,weapon_water_cost,weapon_gold_cost)	
		seek_configure(TYPE_WEAPON,weapon_time)
	else:
		set_error(\"Not enough supplies\")
	pass

func _on_SeekSupplies_pressed():
	seek_configure(TYPE_SUPPLY,supplies_time)
	pass # replace with function body

func seek_configure(typ,time):
	get_node(\"/root/MainScene/Buildings\").create_seek(time)
	curr_seek = typ
	$SeekTimer.wait_time = time
	$SeekTimer.start()
	pass

func _on_ErrorTimer_timeout():
	$Error.text = \"\"
	pass # replace with function body

func seek_result():
	randomize()
	var nr = rand_range(0,100)
	var result = false
	match curr_seek:
		TYPE_SURVIVOR:
			if nr > SURVIVOR_PROB:
				create_survivor()
				result = true
		TYPE_WEAPON:
			if nr > WEAPON_PROB:
				create_weapon()
				result = true
		TYPE_SUPPLY:
			if nr > SUPPLY_PROB:
				create_supplies()
				result = true
	return result

func create_survivor():
	var s = survivor.instance()
	s.create_survivor(\"Ramiro\",\"Some stuff\",1)
	get_parent().get_parent().get_parent().set_pos_survivor(s)
	pass

func create_weapon():
	var w = weapon.instance().create_random_weapon()
	Global.armory.add_weapon(w)
	pass

func create_supplies():
	randomize()
	var f = int(rand_range(1,Global.MAX_FOOD/2))
	var w = int(rand_range(1,Global.MAX_WATER/2))
	var sf = supplies.instance()
	var sw = supplies.instance()
	sf.create_food(f,rect_global_position)
	sw.create_water(w,rect_global_position)
	get_tree().root.call_deferred(\"add_child\",sf)
	get_tree().root.call_deferred(\"add_child\",sw)
	pass

func _on_SeekTimer_timeout():
	get_node(\"/root/MainScene/Buildings\").hide_seek()
	var sr = seek_res.instance()
	get_tree().root.call_deferred(\"add_child\",sr)
	sr.set_info(curr_seek,seek_result())
	pass

func can_search_survivor():
	return Global.curr_food >= survivor_food_cost and Global.curr_water>=survivor_water_cost

func can_search_weapon():
	return Global.curr_food >= weapon_food_cost and Global.curr_water>=weapon_water_cost and Global.GOLD >= weapon_food_cost"
