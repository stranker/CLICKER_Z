script/source = "extends Panel

var weapon

func _ready():
	pass

func _process(delta):
	if weapon != null:
		if Global.GOLD >= weapon.get_cost() and $BuyButton.disabled:
			$BuyButton.disabled = false
	pass

func create_panel(tex,nam,info):
	$TextureRect.texture = load(tex)
	$WeaponName.text = nam
	$WeaponInfo.text = info
	$EquipButton.disabled = true
	$UpgradeButton.disabled = true
	$UpgradeButton.hide()
	$BuyButton.disabled = true
	for i in Global.WEAPON_LIST:
		if i.get_weapon_name() == $WeaponName.text:
			weapon = i
	pass

func _on_EquipButton_pressed():
	if weapon.get_buy():
		Global.curr_weapon = weapon
	pass

func _on_BuyButton_pressed():
	if !weapon.get_buy() and Global.GOLD >= weapon.get_cost():
		Global.GOLD -= weapon.get_cost()
		weapon.set_buy(true)
		$EquipButton.disabled = false
		$BuyButton.disabled = true
		$BuyButton.hide()
		$UpgradeButton.show()
		$UpgradeButton.disabled = false
	pass # replace with function body


func _on_UpgradeButton_pressed():
	pass # replace with function body
