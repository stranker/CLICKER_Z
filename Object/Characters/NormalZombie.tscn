resource_name = "Zombie.gd"
script/source = "extends RigidBody2D

var WALK = 0
var player = Global.player_pos
var direction = Vector2()
var life = 2
var gold = 2
var killer
# DROP
const DROP_PROB = 70
var coin = preload(\"res://Object/CoinCandy.tscn\")
var supply = preload(\"res://Object/Supply.tscn\")

#STATES
enum STATES {WALK,ATTACK}
var curr_state = STATES.WALK

func _ready():
	randomize()
	WALK = int(rand_range(20,30))
	direction = (player-global_position).normalized()
	pass

func _integrate_forces(state):
	if direction.x > 0:
		$Sprite.flip_h = true
	direction = (player-global_position).normalized()
	set_axis_velocity(direction*WALK)
	pass

func get_damage(dmg,kille):
	if life > 0:
		life -= dmg
		set_axis_velocity(Vector2(0,100))
	if life <= 0 and !alive():
		Global.ZOMBI_LIST.erase(self)
		Global.zombie_killed += 1
		Global.EXP += 1
		killer = kille
		drop_coin()
		drop_supply()
		queue_free()
	pass

func drop_coin():
	var c = coin.instance()
	get_node(\"/root/MainScene/Candy\").call_deferred(\"add_child\",c)
	c.global_position = global_position
	c.cant = gold + killer.get_income()
	pass

func drop_supply():
	var nr = int(rand_range(0,100))
	if nr > DROP_PROB:
		randomize()
		var s = supply.instance()
		if nr % 2 == 0:
			s.create_food(int(rand_range(1,3)),global_position)
		else:
			s.create_water(int(rand_range(1,3)),global_position)
		get_node(\"/root/MainScene/Candy\").call_deferred(\"add_child\",s)
		if s.is_inside_tree():
			s.start_tween()
	pass

func alive():
	return life>0

