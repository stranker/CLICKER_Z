script/source = "extends Node2D

var curr_click = 0
enum STATES {IDLE,RAGE}
var state = STATES.IDLE

func _ready():
	set_process(true)
	pass

func _process(delta):
	if !$Rage.is_stopped() and curr_click > 30:
		state = STATES.RAGE
	else:
		state = STATES.IDLE
	pass

func _on_Area_input_event(viewport, event, shape_idx):
	if event is InputEventScreenTouch:
		if event.is_pressed():
			curr_click += 1
			$Rage.start()
			attack()
	pass

func attack():
	if Global.ZOMBI_LIST.size()>0:
		Global.curr_weapon.shoot(Global.ZOMBI_LIST[0]) #ATACA AL PRIMERO
	pass

func _on_Rage_timeout():
	curr_click = 0
	pass"
