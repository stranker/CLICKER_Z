resource_name = "Click.gd"
script/source = "extends Node2D

var clicks = 0
var curr_click = 0
enum STATES {IDLE,RAGE}
var state = STATES.IDLE

func _ready():
	set_process(true)
	pass

func _process(delta):
	if !$Rage.is_stopped() and curr_click > 15:
		state = STATES.RAGE
	else:
		state = STATES.IDLE
	match state:
		0: $State.text = \"IDLE\"
		1: $State.text = \"RAGE!!!\"
	pass

func _on_Area_input_event(viewport, event, shape_idx):
	if event is InputEventScreenTouch:
		if event.is_pressed():
			clicks +=1
			curr_click += 1
			$Clicks.text = \"Clicks: \"+str(clicks)
			$Rage.start()
	pass # replace with function body


func _on_Rage_timeout():
	curr_click = 0
	pass # replace with function body
